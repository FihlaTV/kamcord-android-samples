<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#cccccc"
    android:orientation="vertical" >

    <!-- Actual activity -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/kamcord_rounded_rect"
            android:orientation="horizontal" >
            
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical" >
    
                <ImageButton
                    android:id="@+id/thumbnailButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:adjustViewBounds="true"
                    android:background="#333333"
                    android:padding="1dp"
                    android:scaleType="centerCrop" />
            
                <ProgressBar
                        android:id="@+id/videoProgressBar"
                        style="@android:style/Widget.ProgressBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="invisible" />
            
            </FrameLayout>
            
            <!-- Dummy item to prevent EditTextView from receiving focus -->
            <LinearLayout
                android:focusable="true" 
                android:focusableInTouchMode="true"
                android:layout_width="0px" 
                android:layout_height="0px"/>

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nextFocusUp="@id/description"
                android:nextFocusLeft="@id/description"
                android:background="@null"
                android:hint="@string/kamcordTitleHint"
                android:inputType="textMultiLine|textCapSentences"
                android:layout_marginLeft="8dp"
                android:minHeight="80dp" >

            </EditText>
        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_weight="0"
            android:background="@drawable/kamcord_rounded_rect"
            android:weightSum="1" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight=".5"
                android:gravity="center"
                android:weightSum="1" >

                <LinearLayout
                    android:id="@+id/facebook"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/facebook_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:adjustViewBounds="true"
                        android:focusable="false"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/kamcord_facebook_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:gravity="left|center"
                        android:padding="8dp"
                        android:text="@string/kamcordFacebook"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#aaaaaa" />

                <LinearLayout
                    android:id="@+id/youtube"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/youtube_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:adjustViewBounds="true"
                        android:focusable="false"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/kamcord_youtube_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:gravity="left|center"
                        android:padding="8dp"
                        android:text="@string/kamcordYoutube"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </LinearLayout>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aaaaaa" />

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:weightSum="1" >

                <LinearLayout
                    android:id="@+id/twitter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/twitter_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:adjustViewBounds="true"
                        android:focusable="false"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/kamcord_twitter_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:gravity="left|center"
                        android:padding="8dp"
                        android:text="@string/kamcordTwitter"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#aaaaaa" />

                <LinearLayout
                    android:id="@+id/email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/email_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:adjustViewBounds="true"
                        android:focusable="false"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/kamcord_mail_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:gravity="left|center"
                        android:padding="8dp"
                        android:text="@string/kamcordEmail"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </LinearLayout>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".7"
            android:orientation="vertical" >

            <Button
                android:id="@+id/share"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/kamcord_share_button"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="@string/kamcordShare"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/progressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="4dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000"
                    android:visibility="invisible" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="@android:style/Widget.ProgressBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/retry"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/kamcord_retry"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:focusable="false"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/kamcordFooter"
        android:textColor="#666666"
        android:textSize="12dp" />

</LinearLayout>